{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "password":{
            "type": "securestring"
        },
        "loginName":{
            "type": "string"
        },
        
    },
    "variables": {
        "VMName":"[concat('vm-',resourceGroup().name)]",
        "VmStorage":"[concat('vmstor',resourceGroup().name)]",
        "VMPip":"[concat('vm-pip-',resourceGroup().name)]",
        "VnetName":"[concat('vnet-',resourceGroup().name)]",
        "VMnicName":"[concat('nic-',resourceGroup().name)]",
        "nsgName":"[concat('nsg-',resourceGroup().name)]"
    },
    "resources": [{
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2015-06-15",
        "name": "[toLower(variables('VmStorage'))]",
        "location": "[resourceGroup().location]",
        "properties": {
            "accountType": "Standard_LRS"
        }
    },
    {
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2017-06-01",
        "name": "[variables('nsgName')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "securityRules": []
        }
    },
    {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('VMPip')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[variables('VnetName')]",
        "dependsOn": [
            "[variables('nsgName')]"
        ],
        "location": "[resourceGroup().location]",
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.0.0.0/16"
                ]
            },
            "subnets": [
                {
                    "name": "subnet",
                    "properties": {
                        "networkSecurityGroup": {
                            "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                        },
                        "addressPrefix": "10.0.0.0/24"
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('VMnicName')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[concat('Microsoft.Network/publicIPAddresses/', variables('VMPip'))]",
            "[concat('Microsoft.Network/virtualNetworks/', variables('VnetName'))]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('VMPip'))]"
                        },
                        "subnet": {
                            "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('VnetName')), '/subnets/subnet')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2017-03-30",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('VMName')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[concat('Microsoft.Storage/storageAccounts/', toLower(variables('VmStorage')))]",
            "[concat('Microsoft.Network/networkInterfaces/' , variables('VMnicName'))]"
        ],
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_A2"
            },
            "osProfile": {
                "computerName": "[variables('VMName')]",
                "adminUsername": "[parameters('loginName')]",
                "adminPassword": "[parameters('password')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "2012-R2-Datacenter",
                    "version": "latest"
                },
                "osDisk": {
                    "name": "[concat(variables('VMName'),'-OSDisk')]",
                    "caching": "ReadWrite",
                    "createOption":"FromImage"
                },
                "dataDisks":[
                    {
                        "name": "[concat(variables('VMName'), '-data-disk')]",
                        "lun":1,
                        "createOption":"Empty",
                        "diskSizeGB":30
                    }
                ]
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VMnicName'))]"
                    }
                ]
            },
            "diagnosticsProfile": {
                "bootDiagnostics": {
                    "enabled": true,
                    "storageUri": "[concat('http://', toLower(variables('VmStorage')), '.blob.core.windows.net')]"
                }
            }
        }
    }],
    "outputs": {}
}