{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "VNetAddressPrefix":{
      "type":"string",
      "defaultValue": "192.168.0.0/16"
    },
  "FEsubnetName":{
      "defaultValue": "FESubnet",
      "type":"string"
    },
  "BESubnetName":{
    "type": "string",
    "defaultValue": "BESubnet"
  },
  "FEaddressPrefix":{
      "type":"string",
      "defaultValue": "192.168.0.0/24"
    },
  "BEaddressPrefix":{
      "type":"string",
      "defaultValue": "192.168.1.0/24"
  }
  },
  "variables": {
    "VNetName": "[concat('vnet-',resourceGroup().name)]",
    "nsgname":"[concat('nsg-',resourceGroup().name)]",
    "nsgRuleName":"IIS-8080"
    
  },
  "resources": [
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('nsgname')]",
      "location": "[resourceGroup().location]",
      "properties": {
          "securityRules": [{
              "name": "[variables('nsgRuleName')]",
              "properties": {
                  "description": "IIS-8080",
                  "protocol": "tcp",
                  "sourcePortRange": "*",
                  "destinationPortRange": "8080",
                  "sourceAddressPrefix": "*",
                  "destinationAddressPrefix": "*",
                  "access": "Allow",
                  "priority": "100",
                  "direction": "Inbound"
              }
          }]
      }
  },
  {
      "name": "[variables('VNetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgname'))]"
      ],  
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('VNetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('BESubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('BEaddressPrefix')]"
            }
          },
          {
            "name": "[parameters('FEsubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('FEaddressPrefix')]",
              "networkSecurityGroup": {
               "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgname'))]"
              }   
            }
            
          }
        
        ]
      }
    }
  ],
  "outputs": {
    
  }
}
