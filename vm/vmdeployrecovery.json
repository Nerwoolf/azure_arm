{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmsize":{
            "type":"string",
            "defaultValue": "Standard_DS2_v2",
            "metadata": {
                "description":"Virtual machine size"
            }
        },
        "SubnetId":{
          "type": "string"
        },
        "PublicIPid":{
          "type":"string"
        },
        "AdminName":{
          "type": "string",
          "defaultValue": "nerwoolf"
        },
        "AdminPassword": {
          "type": "securestring"
      },
        "OsDiskUrl":{
            "type": "string"
        },
        "DataDiskUrl":{
            "type": "string"
        }
    },
    "variables": {
        "VirtualMachineName":"[concat('vm-',resourceGroup().name)]",
        "AvailabilitySetName":"[concat('availset',resourceGroup().name)]",
        "VirtualMachineNicName":"[concat('vm-','nic-',resourceGroup().name)]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[variables('AvailabilitySetName')]",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "sku":{
              "name": "aligned"
            },
            "properties": {
              "platformFaultDomainCount":1,
              "platformUpdateDomainCount":1
            }
        },
        {
            "name": "[variables('VirtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "comments": "This is the virtual machine that you're building.",
            "dependsOn": [
              "[variables('VirtualMachineNicName')]",
              "[variables('AvailabilitySetName')]"
            ],
            "properties": {
              "osProfile": {
                "computerName": "[variables('virtualMachineName')]",
                "adminUsername": "[parameters('AdminName')]",
                "adminPassword": "[parameters('AdminPassword')]",
                "windowsConfiguration": {
                  "provisionVmAgent": "true"
                }
              },
              "hardwareProfile": {
                "vmSize": "[parameters('vmsize')]"
              },
              "storageProfile": {
                "osDisk": {
                  "createOption": "Attach",
                  "name": "[concat(variables('VirtualMachineName'),'osdisk')]",
                  "vhd":{
                      "uri": "[parameters('OsDiskUrl')]"
                  }
                },
                "dataDisks": [
                  {
                    "lun": 1,
                    "diskSizeGB": 2,
                    "name": "[concat(variables('VirtualMachineName'),'-data-disk')]",
                    "createOption":"Attach",
                    "vhd":{
                        "uri": "[parameters('DataDiskUrl')]"
                    }
                  }
                ]
              },
              "networkProfile": {
                "networkInterfaces": [
                  {
                    "properties": {
                      "primary": true
                    },
                    "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VirtualMachineNicName'))]"
                  }
                ]
              },
              "diagnosticsProfile": {
                "bootDiagnostics": {
                  "enabled": false
                }
              },
              "availabilitySet": {
                "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('AvailabilitySetName'))]"
              }
            }
          },
          {
            "name": "[variables('VirtualMachineNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2017-06-01",
            "location": "[resourceGroup().location]",
            "comments": "This will be your Primary NIC",
            "properties": {
              "ipConfigurations": [
                {
                  "name": "ipconfig",
                  "properties": {
                    "subnet": {
                      "id": "[parameters('SubnetId')]"
                    },
                    "privateIPAllocationMethod": "Dynamic",
                    "publicIpAddress": {
                      "id": "[parameters('PublicIPid')]"
                    }
                  }
                }
              ]
            }
          }
       ],
    "outputs": {
      "VMname":{
        "type":"array",
        "value":["[variables('VirtualMachineName')]"]
      }
    }
}